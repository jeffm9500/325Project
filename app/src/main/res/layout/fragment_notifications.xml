<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:id="@+id/TaskManagerLayout"
        android:layout_width="304dp"
        android:layout_height="525dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/newChoreButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckedTextView
            android:id="@+id/checkedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckedTextView" />

        <TextView
            android:id="@+id/choreSlot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Chore 1" />
    </LinearLayout>

    <Button
        android:id="@+id/newChoreButton"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:onClick="newChore"
        android:text="Add New Chore"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="129dp" />
</androidx.constraintlayout.widget.ConstraintLayout>