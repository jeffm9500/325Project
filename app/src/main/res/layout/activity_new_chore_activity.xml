<?xml version="1.0" encoding="utf-8"?>

<Androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choreLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="300dp"
    android:layout_marginRight="30dp"
    android:layout_weight="1"
    android:background="#3903A9F4"
    android:gravity="center_vertical|center_horizontal|center"
    android:paddingBottom="60dp"
    tools:context=".new_chore_activity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="18dp"
        android:text="DESCRIPTION:" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="18dp"
        android:text="TYPE:" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        android:autofillHints=""
        android:backgroundTint="#FFFFFF"
        android:hint="@string/insert_chore_name"
        android:inputType="textShortMessage"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="18dp"
        android:autofillHints=""
        android:backgroundTint="#FFFFFF"
        android:hint="Enter description of the chore here."
        android:inputType="textShortMessage"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/name5"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="135dp"
        android:layout_marginRight="18dp"
        android:autofillHints=""
        android:backgroundTint="#FFFFFF"
        android:hint="Group or Individual?"
        android:inputType="textShortMessage"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="35dp"
        android:text="TASK NAME:" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:text="NEW TASK"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="190dp"
        android:text="@string/done" />


</Androidx.constraintlayout.widget.ConstraintLayout>