<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeyou"
    tools:context=".ui.dashboard.DashboardFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toNewChore"
        android:src="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <TableLayout
        android:id="@+id/choresYours"
        android:layout_width="394dp"
        android:layout_height="360dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473"
        tools:layout_constraintTop_toBottomOf="@id/swapToAllBtn">

        <TableRow
            android:id="@+id/chore1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Vacuum Living Room" />

            <CheckBox
                android:id="@+id/choreComplete1"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/choreDue1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/chore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/choreName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Clean Kitchen" />

            <CheckBox
                android:id="@+id/choreComplete2"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/choreDue2"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/chore3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Pay Utilities" />

            <CheckBox
                android:id="@+id/choreComplete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/choreDue3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/chore4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Put Out Trash" />

            <CheckBox
                android:id="@+id/choreComplete4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/PasswordInput"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/chore5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Take Out Compost" />

            <CheckBox
                android:id="@+id/choreComplete5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/choreDue5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>