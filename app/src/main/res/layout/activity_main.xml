<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeyou">

    <TableLayout
        android:id="@+id/choresYours"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:stretchColumns='"0,1,2"'
        app:layout_constraintBottom_toTopOf="@id/addTask3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swapToAllBtn"
        tools:layout_constraintTop_toBottomOf="@id/swapToAllBtn">

        <TableRow
            android:id="@+id/chore1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName1"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="Vacuum Living Room" />

            <CheckBox
                android:id="@+id/choreComplete1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/choreDue1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/chore2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="Clean Kitchen" />

            <CheckBox
                android:id="@+id/choreComplete2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="@string/complete"
                tools:layout_column="1" />

            <EditText
                android:id="@+id/choreDue2"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:textColor="#FFFFFF"
            android:id="@+id/chore3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="Pay Utilities" />

            <CheckBox
                android:id="@+id/choreComplete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/choreDue3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/chore4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="Put Out Trash" />

            <CheckBox
                android:id="@+id/choreComplete4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/PasswordInput"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/chore5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/choreName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="Take Out Compost" />

            <CheckBox
                android:id="@+id/choreComplete5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#FFFFFF"
                android:text="@string/complete" />

            <EditText
                android:id="@+id/choreDue5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:text="@string/due"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </TableRow>
    </TableLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTask3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toNewChore"
        android:src="@android:drawable/ic_menu_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <Button
        android:id="@+id/button9"
        android:layout_width="88dp"
        android:layout_height="55dp"
        android:background="#00FFFFFF"
        android:onClick="toHouseManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:onClick="toCalendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/swapToAllBtn"
        android:layout_width="65dp"
        android:layout_height="51dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="120dp"
        android:background="#00FFFFFF"
        android:onClick="toAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:background="#00FFFFFF"
        android:onClick="toProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>